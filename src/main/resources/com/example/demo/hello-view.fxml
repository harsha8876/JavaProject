<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.demo.PatientRegistrationController"
          hgap="10"
          vgap="10"
          padding="10">

    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Medical History:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="medicalHistoryField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Ongoing Treatments:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="ongoingTreatmentsField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Allergies:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="allergiesField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Emergency Contact:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="emergencyContactField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Button text="Register" onAction="#handleRegister" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <!-- Add spacing for better layout -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</GridPane>
